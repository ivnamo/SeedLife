rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function para verificar que el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function para verificar que el usuario es el propietario
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Reglas para /users/{userId}
    match /users/{userId} {
      // Solo el propietario puede leer y escribir su propio documento
      allow read, write: if isOwner(userId);
      
      // Reglas para /users/{userId}/seeds/{seedId}
      match /seeds/{seedId} {
        // Solo el propietario puede leer y escribir sus seeds
        allow read, write: if isOwner(userId);
        
        // Reglas para /users/{userId}/seeds/{seedId}/waterings/{wateringId}
        match /waterings/{wateringId} {
          // Solo el propietario puede leer y escribir los waterings de sus seeds
          allow read, write: if isOwner(userId);
        }
      }
      
      // Reglas para /users/{userId}/stats/{statId}
      match /stats/{statId} {
        // Solo el propietario puede leer y escribir sus estadísticas
        allow read, write: if isOwner(userId);
      }
    }
  }
}
